    ViewData["Title"] = "Protection Consumables Paladin Guide";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Html.PartialAsync("_PageHeaderPartial", Model)

<div class="main-wrapper">
    <section id="overview">
        <p>
            Explore the depths of the Protection Paladin Talent Tree, which has immense power and many customization options.
            In this Protection Paladin guide, we review all the different abilities and talents in Patch 11.1 & Season 2, including what they do and when to use them.
        </p>

