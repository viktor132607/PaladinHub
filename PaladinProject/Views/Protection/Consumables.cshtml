@functions {
	public static string HighlightSpells(string input, Dictionary<string, string> spells)
	{
		foreach (var spell in spells.Keys)
		{
			input = input.Replace(spell, $"<span style='color: yellow; font-weight: bold;'>{spell}</span>");
		}
		return input;
	}
}

