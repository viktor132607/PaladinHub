        display: flex;
        justify-content: center;
        gap: 40px;
        margin-bottom: 30px;
    }

        .build-images img {
            width: 100%;
            max-width: 1200px;
            height: auto;
            object-fit: cover;
        }

    .content-wrapper {
        width: 80%;
        margin: 0 auto;
    }

    .tier-set-list {
        list-style-type: none !important;
        padding-left: 0 !important;
        display: flex;
        gap: 40px;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
    }

        .tier-set-list li {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

    .tier-set-img {
        width: 80px;
        height: auto;
        margin-bottom: 5px;
    }

    .hero-talent-entry {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: left;
        flex: 1;
        min-width: 300px;
    }

        .hero-talent-entry img {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
            border: 2px solid #555;
            margin-bottom: 10px;
        }

    .tier-set-section {
        text-align: center;
        margin-bottom: 40px;
    }

    .hero-talent-entry ul {
        list-style-type: none;
        padding-left: 0;
    }

    .content-columns ul {
        list-style-type: none;
        padding-left: 0;
    }

    .section-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
        margin: 15px 0;
    }

        .section-buttons a {
            background-color: #444;
            border: 1px solid #888;
            padding: 8px 16px;
            border-radius: 6px;
            color: white;
            text-decoration: none;
            transition: background-color 0.2s ease;
        }

