        display: flex;
        justify-content: center;
        margin: 20px 0;
    }

    .separator {
        display: block;
        width: 95%;
        height: auto;
    }

    .content-columns {
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
        margin-bottom: 20px;
        align-items: center;
    }

        .content-columns > div {
            flex: 1;
            min-width: 300px;
        }

    h2 {
        text-align: center;
    }

    .hero-talents-title {
        text-align: center;
        margin-top: 30px;
    }

