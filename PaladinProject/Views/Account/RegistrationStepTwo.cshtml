@{
    ViewData["Title"] = "Register";
    var email = ViewBag.Email as string; // Assuming you're passing the email from controller
}

<div class="d-flex justify-content-center align-items-center vh-100" style="background-color: #1c1c1c;">
    <div class="p-5 rounded" style="background-color: #2c2c2c; max-width: 600px; text-align: center;">
        <h2 class="text-white mb-4">Registration - Step 1.5 of 2</h2>
        <p class="text-white-50 mb-4">
            An email was sent to <strong>@email</strong>. Simply follow the instructions to create your account.
        </p>
        <p class="text-white-50">
            If you don't receive the verification email,
            <a href="/Account/ResendEmailConfirmation" style="color: #f5c518;">click here</a>
            to send another one.
        </p>
    </div>
</div>
