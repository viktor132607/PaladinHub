<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - PaladinProject</title>
	<link rel="icon" type="image/png" href="images/WoW_icon.svg.png">

	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/PaladinProject.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-pD+rHgR6yHg9dwT1trENc69MxO4pH2UjF8lq1yMYFbB8XelFgphE1TfHDH4o2v+5p7W9k5NV07u6e1kI+p7k5g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

	<style>
		/* Darker Navbar */
		.navbar-custom {
			background-color: #1e1e1e; /* dark grey */
		}

		/* Navbar Links */
		.navbar-nav .nav-link {
			color: #FFD700 !important; /* Gold */
			font-weight: bold;
			font-size: 1.2rem;
			transition: color 0.3s, text-shadow 0.3s;
		}

			/* Subtle glow on hover */
			.navbar-nav .nav-link:hover {
				color: #FFC300 !important;
				text-shadow: 0 0 4px #FFD700;
			}

		/* Home Icon Style */
		.nav-home-icon {
			font-size: 2.2rem;
			color: #FFD700 !important;
			transition: color 0.3s, text-shadow 0.3s;
		}

			/* Subtle glow on Home icon hover */
			.nav-home-icon:hover {
				color: #FFC300 !important;
				text-shadow: 0 0 4px #FFD700;
			}
	</style>
</head>

<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
						aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="HolyPaladinGuide">Holy Paladin</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="ProtectionPaladinGuide">Protection Paladin</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="RetributionPaladinGuide">Retribution Paladin</a>
						</li>
					</ul>

					<!-- Right side Login and Register buttons -->
					<ul class="navbar-nav ms-auto">
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login"> Login</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Account" asp-action="RegistrationStepOne"> Register</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>

	</header>


	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - PaladinProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
