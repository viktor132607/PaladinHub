@model PaladinHub.Data.Entities.Spell

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Spell Details";
}

<div class="container py-4">
    <h2 class="mb-4">Spell Details</h2>

    <div class="card">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Url</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrWhiteSpace(Model.Url))
                    {
                        <a href="@Model.Url" target="_blank" rel="noopener noreferrer">@Model.Url</a>
                    }
                </dd>

                <dt class="col-sm-3">Quality</dt>
                <dd class="col-sm-9">@Model.Quality</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Database" asp-action="Index" asp-route-entity="Spells" class="btn btn-secondary">Back</a>
    </div>
</div>
