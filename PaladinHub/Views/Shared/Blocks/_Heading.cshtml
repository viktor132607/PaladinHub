@model dynamic
@{
    var id = (string)(Model?.SectionId ?? $"block-heading-{Guid.NewGuid():N}");
    var text = (string)(Model?.Text ?? "Heading");
    var level = (string)(Model?.Level ?? "h2"); // h1|h2|h3
    var align = (string)(Model?.Align ?? "left");
    var css = (string)(Model?.CssClass ?? "");
}
<section id="@id">
    @: <@level class="@css" style="text-align:@align">@Html.Raw(text)</@level>
</section>
