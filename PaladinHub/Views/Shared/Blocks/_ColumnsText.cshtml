@model dynamic
@{
    var id = (string)(Model?.SectionId ?? $"block-cols-{Guid.NewGuid():N}");
    int cols = (int?)(Model?.Columns) ?? 2; cols = Math.Clamp(cols, 2, 4);
    var parts = (IEnumerable<string>)(Model?.MarkdownPerColumn ?? new List<string>());
}
<section id="@id" class="columns-text columns-@cols">
    <div class="columns-wrapper">
        @foreach (var md in parts)
        {
            <div class="col">
                @Html.Raw(md ?? "")
            </div>
        }
    </div>
</section>
