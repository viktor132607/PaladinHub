@model IEnumerable<PaladinHub.Data.Models.DiscussionPost>
@{
    ViewData["Title"] = "Discussions";
}
<link rel="stylesheet" href="/text.css" />

<div class="section-wrapper d-flex justify-content-between align-items-center mb-3">
    <h2 class="m-0"><i class="fa-solid fa-comments"></i> Discussions</h2>
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <a class="btn btn-outline-primary" asp-controller="Discussions" asp-action="Create">
            <i class="fa-solid fa-plus"></i> New Topic
        </a>
    }
</div>

<div class="separator-container">
    <span class="separator"></span>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No topics yet. Be the first to start a discussion!</div>
}
else
{
    <div class="discussion-list">
        @foreach (var p in Model)
        {
            <div class="discussion-item mb-4 p-3" style="background-color:#1a1a1a; border:1px solid #FFD700; border-radius:6px;">
                <h3 class="discussion-title mb-1">
                    <a asp-controller="Discussions" asp-action="Details" asp-route-id="@p.Id" class="item-link">
                        @p.Title
                    </a>
                </h3>
                <div class="discussion-meta text-muted mb-2" style="font-size:0.9rem;">
                    by <span class="highlight">@p.Author?.UserName</span> • @p.CreatedOn.ToLocalTime()
                </div>
                <div class="discussion-preview">
                    @{
                        var preview = p.Content ?? string.Empty;
                        if (preview.Length > 220) preview = preview.Substring(0, 220) + "...";
                    }
                    @preview
                </div>
                <div class="discussion-stats mt-2 text-muted" style="font-size:0.9rem;">
                    💬 @(p.Comments?.Count ?? 0) • ❤️ @p.Likes
                </div>

                @if (User?.Identity?.IsAuthenticated == true)
                {
                    var isAdmin = User?.IsInRole("Admin") == true;
                    var userId = User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

                    if (isAdmin || p.AuthorId == userId)
                    {
                        <form asp-action="Delete" asp-route-id="@p.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm mt-2"
                                    onclick="return confirm('Are you sure you want to delete this discussion?');">
                                <i class="fa-solid fa-trash"></i> Delete
                            </button>
                        </form>
                    }
                }
            </div>
        }
    </div>
}
