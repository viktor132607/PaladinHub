@model PaladinHub.Models.Discussions.CreatePostViewModel
@{
    ViewData["Title"] = "New Topic";
}
<link rel="stylesheet" href="/text.css" />

<div class="section-wrapper">
    <h2 class="text-center mb-4"><i class="fa-solid fa-pen-to-square"></i> New Topic</h2>

    <div class="separator-container mb-4">
        <span class="separator"></span>
    </div>

    <form asp-action="Create" method="post" class="p-4" style="background-color:#1a1a1a; border:1px solid #FFD700; border-radius:6px;">
        <div class="mb-3">
            <label class="form-label fw-bold text-white">Title</label>
            <input asp-for="Title" class="form-control" style="background-color:#2c2c2c; color:white; border:1px solid #FFD700;" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold text-white">Content</label>
            <textarea asp-for="Content" rows="8" class="form-control" style="background-color:#2c2c2c; color:white; border:1px solid #FFD700;"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-success">
                <i class="fa-solid fa-upload"></i> Publish
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
        </div>
    </form>
</div>
