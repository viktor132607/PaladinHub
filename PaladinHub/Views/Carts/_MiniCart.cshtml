@model PaladinHub.Models.Carts.MyCartViewModel

<div class="mini-cart-content">
    @if (Model?.MyProducts == null || !Model.MyProducts.Any())
    {
        <div class="p-3 text-center text-muted">The cart is empty!</div>
    }
    else
    {
        <ul class="list-unstyled mini-cart-list">
            @foreach (var p in Model.MyProducts.Take(6))
            {
                <li class="mini-cart-item d-flex gap-2 p-2">
                    <img src="@p.ImageUrl" alt="@p.Name" class="mini-cart-thumb" />
                    <div class="flex-grow-1">
                        <div class="mini-cart-name text-truncate">@p.Name</div>
                        <div class="mini-cart-meta">
                            <span class="fw-semibold">@p.Price.ToString("0.##")</span> лв.
                            <span class="text-muted">× @p.Quantity</span>
                        </div>
                    </div>
                    <a class="text-muted ms-2"
                       asp-controller="Carts"
                       asp-action="RemoveProductFromCart"
                       asp-route-id="@p.Id"
                       title="Премахни">
                        <i class="fa-solid fa-xmark"></i>
                    </a>
                </li>
            }
        </ul>

        <div class="mini-cart-total d-flex justify-content-between align-items-center px-3 py-2">
            <span class="fw-bold">Общо:</span>
            <span class="fw-bold">@Model.TotalPrice.ToString("0.##") лв.</span>
        </div>

        <div class="p-3 d-grid gap-2">
            <a class="btn btn-dark" asp-controller="Carts" asp-action="MyCart">КЪМ КОЛИЧКАТА</a>
            <a class="btn btn-warning" asp-controller="Carts" asp-action="Buy">КУПИ</a>
        </div>
    }
</div>
