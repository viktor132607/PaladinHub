@model PaladinHub.Models.Carts.MyCartViewModel

<style>
    .alert-floating {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1050;
        min-width: 300px;
        max-width: 500px;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
    }

    .cart-table {
        background-color: #1a1a1a;
        border: 1px solid #FFD700;
        color: white;
    }

        .cart-table th, .cart-table td {
            vertical-align: middle;
        }

        .cart-table thead th {
            background-color: #292940;
            color: #FFD700;
            text-align: center;
        }

    .cart-actions a {
        min-width: 36px;
        text-align: center;
    }
</style>

@if (Model.TotalPrice != 0)
{
    @if (TempData["AddedSuccessfully"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show alert-floating" role="alert" id="alert">
            <i class="fa fa-check"></i>
            The product is added successfully to your cart.
        </div>
    }
    @if (TempData["RemovedFromCart"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show alert-floating" role="alert" id="alert">
            <i class="fa fa-check"></i>
            The product is removed successfully from your cart.
        </div>
    }

    <main class="mt-3">
        <div class="container justify-content-center">
            <h3 class="text-center mb-4"><i class="fa-solid fa-shopping-cart"></i> My Cart</h3>
            <table class="table table-hover text-center cart-table">
                <thead>
                    <tr class="row">
                        <th scope="col" class="col-lg-5">Name</th>
                        <th scope="col" class="col-lg-1"></th>
                        <th scope="col" class="col-lg-1">Quantity</th>
                        <th scope="col" class="col-lg-1">Price</th>
                        <th scope="col" class="col-lg-1"></th>
                        <th scope="col" class="col-lg-1"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.MyProducts)
                    {
                        <tr class="row">
                            <td class="col-lg-5">@product.Name</td>
                            <td class="col-lg-1 cart-actions">
                                <a asp-controller="Carts"
                                   asp-action="IncreaseProduct"
                                   asp-route-id="@product.Id"
                                   class="btn btn-outline-primary">+</a>
                            </td>

                            @if (product.Quantity >= 1)
                            {
                                <th class="col-lg-1">@product.Quantity</th>
                                <td class="col-lg-1">$@product.Price</td>
                            }

                            <td class="col-lg-1 cart-actions">
                                <a asp-controller="Carts"
                                   asp-action="DecreaseProduct"
                                   asp-route-id="@product.Id"
                                   class="btn btn-outline-primary">-</a>
                            </td>
                            <td class="col-lg-1 cart-actions">
                                <a asp-controller="Carts"
                                   asp-action="RemoveProductFromCart"
                                   asp-route-id="@product.Id"
                                   class="btn btn-outline-danger">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <h3 class="text-center mt-4">Total Cost: <span class="highlight">$@Model.TotalPrice</span></h3>
            <div class="button-holder text-center mt-3">
                <a asp-controller="Carts" asp-action="Buy" class="btn btn-success me-2">Buy</a>
                <a asp-controller="Carts" asp-action="Cancel" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </main>
}
else
{
    <div class="text-center">
        <h1>Your cart is empty!</h1>
    </div>
}

<script>
    setTimeout(function () {
        $('#alert').delay(1000).fadeOut(300);
    }, 1000);
</script>
