@model PaladinHub.Models.Products.ProductDetailsViewModel
@using PaladinHub.Models
@using PaladinHub.Models.Products
@{
    // Списък със снимки: галерията от модела или fallback към основното ImageUrl / placeholder
    var imgs = (Model.Images != null && Model.Images.Count > 0)
        ? Model.Images
        : new List<ProductDetailsViewModel.ImageItem>
          {
              new ProductDetailsViewModel.ImageItem
              {
                  Id = null,
                  Url = !string.IsNullOrWhiteSpace(Model.ImageUrl)
                        ? Model.ImageUrl!
                        : Url.Content("~/images/placeholder.png")
              }
          };

    var carouselId = "prodCarousel_" + Model.Id;
}

<div id="@carouselId" class="carousel slide" data-bs-ride="false">
  <div class="carousel-inner bg-dark rounded p-3 text-center">
    @for (var i = 0; i < imgs.Count; i++)
    {
        var it = imgs[i];
        <div class="carousel-item @(i == 0 ? "active" : "")">
            <img src="@it.Url"
                 class="d-block mx-auto img-fluid"
                 style="max-height:480px; object-fit:contain;"
                 alt="image @i" />
        </div>
    }
  </div>

  @if (imgs.Count > 1)
  {
    <button class="carousel-control-prev" type="button" data-bs-target="#@carouselId" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#@carouselId" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>

    <div class="d-flex gap-2 mt-2 flex-wrap justify-content-center">
      @for (var i = 0; i < imgs.Count; i++)
      {
          var it = imgs[i];
          <button type="button" class="btn p-0 border-0" data-bs-target="#@carouselId" data-bs-slide-to="@i" aria-label="Slide @(i+1)">
            <img src="@it.Url" class="img-thumbnail" style="width:64px;height:64px;object-fit:cover;" />
          </button>
      }
    </div>
  }
</div>
